<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MenuActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    app:cardCornerRadius="10dp">


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="20dp">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="تعداد سفارش"
                                android:gravity="center"
                                android:layout_margin="20dp"/>
                        <EditText
                                android:id="@+id/edittextbread"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_margin="20dp"
                                android:maxLines="1"
                                android:maxLength="2"
                                android:inputType="number"
                                android:backgroundTint="@android:color/black"/>

                    </LinearLayout>
                    <ImageView
                            android:id="@+id/imageview"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:src="@drawable/barbari_noon"
                            android:layout_margin="20dp"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    app:cardCornerRadius="10dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="20dp">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="تعداد سفارش"
                                android:gravity="center"
                                android:layout_margin="20dp"/>
                        <EditText
                                android:id="@+id/edittextbread1"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_margin="20dp"
                                android:maxLines="1"
                                android:maxLength="2"
                                android:inputType="number"
                                android:backgroundTint="@android:color/black"/>

                    </LinearLayout>
                    <ImageView
                            android:id="@+id/imageview1"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:src="@drawable/lavash_noon"
                            android:layout_margin="20dp"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    app:cardCornerRadius="10dp">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="20dp">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="تعداد سفارش"
                                android:gravity="center"
                                android:layout_margin="20dp"/>
                        <EditText
                                android:id="@+id/edittextbread2"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_margin="20dp"
                                android:maxLines="1"
                                android:maxLength="2"
                                android:inputType="number"
                                android:backgroundTint="@android:color/black"/>

                    </LinearLayout>
                    <ImageView
                            android:id="@+id/imageview2"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:src="@drawable/sangak_noon"
                            android:layout_margin="20dp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <Button
                    android:id="@+id/buttonconfirmbread"
                    android:text="تایید"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/button_shape"/>
        </LinearLayout>


    </ScrollView>


</LinearLayout>